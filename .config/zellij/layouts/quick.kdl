ui {
  pane_frames {
    rounded_corners true
    hide_session_name false
  }
}

layout {
  cwd "$HOME"

  default_tab_template {
    pane size=1 borderless=true {
      plugin location="tab-bar"
    }
    children
    pane size=1 borderless=true {
      plugin location="status-bar"
    }
  }

  tab name="btop" {
    pane command="btop" borderless=true name="xavier.riu"
  }
}
