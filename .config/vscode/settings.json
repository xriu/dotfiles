{
  // Editor Settings
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": false,
  "editor.experimental.asyncTokenization": true,
  "editor.folding": true,
  "editor.fontFamily": "FiraCodeNerdFont-Retina",
  "editor.fontLigatures": false,
  "editor.fontWeight": "300",
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.glyphMargin": false,
  "editor.guides.bracketPairs": true,
  "editor.guides.highlightActiveBracketPair": true,
  "editor.hideCursorInOverviewRuler": true,
  "editor.inlineSuggest.enabled": true,
  "editor.insertSpaces": true,
  "editor.minimap.enabled": false,
  "editor.occurrencesHighlight": "off",
  "editor.overviewRulerBorder": false,
  "editor.renderLineHighlight": "none",
  "editor.renderWhitespace": "none",
  "editor.stickyScroll.enabled": true,
  "editor.suggestSelection": "first",

  // Language-Specific Settings
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[hcl]": {
    "editor.defaultFormatter": "jkillian.custom-local-formatters"
  },
  "[html]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "[javascript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.formatOnSave": true
  },
  "[terraform-vars]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // File Settings
  "files.associations": {
    "*.tf": "terraform",
    "*.tftpl": "hcl",
    "*.tfvars": "terraform-vars"
  },
  "files.autoSave": "afterDelay",
  "files.exclude": {
    "**/node_modules/": true,
    "wp-admin/": true,
    "wp-config.*": false,
    "wp-includes/": true,
    "xmlrpc.php": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": false,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/node_modules/**": true
  },

  // Explorer Settings
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 1,

  // Search Settings
  "search.exclude": {
    "**/.git": true,
    "**/bower_components": true,
    "**/build": true,
    "**/node_modules": true,
    "**/tmp": true
  },

  // Breadcrumbs
  "breadcrumbs.enabled": false,

  // Diff Editor
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.maxComputationTime": 0,

  // Extensions
  "extensions.autoUpdate": true,
  "extensions.ignoreRecommendations": true,

  // Git Settings
  "git.autofetch": true,
  "git.blame.editorDecoration.enabled": true,
  "git.blame.statusBarItem.enabled": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.ignoreLimitWarning": true,
  "git.openRepositoryInParentFolders": "always",

  // GitHub
  "github.copilot.editor.enableAutoCompletions": true,
  "githubPullRequests.createOnPublishBranch": "never",
  "githubPullRequests.pullBranch": "never",

  // Java Settings
  "java.configuration.runtimes": [
    {
      "default": false,
      "name": "JavaSE-20",
      "path": "/Library/Java/JavaVirtualMachines/temurin-21.jdk/Contents/Home"
    }
  ],
  "java.configuration.updateBuildConfiguration": "interactive",
  "java.errors.incompleteClasspath.severity": "ignore",
  "java.format.settings.url": ".settings/org.eclipse.jdt.core.prefs",
  "java.import.generatesMetadataFilesAtProjectRoot": false,
  "java.import.gradle.java.home": "/Library/Java/JavaVirtualMachines/temurin-21.jdk/Contents/Home",
  "java.imports.gradle.wrapper.checksums": [
    {
      "allowed": true,
      "sha256": "1cef53de8dc192036e7b0cc47584449b0cf570a00d560bfaa6c9eabe06e1fc06"
    }
  ],
  "java.jdt.ls.java.home": "/Library/Java/JavaVirtualMachines/temurin-21.jdk/Contents/Home",
  "java.jdt.ls.vmargs": "-XX:+UseParallelGC -XX:GCTimeRatio=4 -XX:AdaptiveSizePolicyWeight=90 -Dsun.zip.disableMemoryMapping=true -Xmx1G -Xms100m -javaagent:\"/Users/xavier.riu/.vscode/extensions/vscjava.vscode-lombok-1.0.1/server/lombok.jar\"",
  "java.project.importHint": false,
  "java.project.importOnFirstTimeStartup": "automatic",
  "java.saveActions.organizeImports": true,

  // JavaScript/TypeScript
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  // Python
  "python.formatting.autopep8Args": ["--max-line-length=120"],
  "python.formatting.provider": "autopep8",
  "python.languageServer": "None",

  // Prettier
  "prettier.useEditorConfig": false,

  // Quarkus
  "quarkus.tools.alwaysShowWelcomePage": false,

  // Red Hat
  "redhat.telemetry.enabled": false,

  // SCM
  "scm.experimental.showHistoryGraph": true,

  // Telemetry
  "telemetry.telemetryLevel": "off",

  // Terminal
  "terminal.external.linuxExec": "Ghostty.app",
  "terminal.external.osxExec": "Ghostty.app",
  "terminal.integrated.automationProfile.osx": {
    "path": "/opt/homebrew/bin/zsh"
  },
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.env.osx": {
    "SHELL": "/opt/homebrew/bin/zsh"
  },
  "terminal.integrated.fontFamily": "monospace",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.profiles.osx": {
    "zsh": {
      "path": "/opt/homebrew/bin/zsh",
      "args": ["-l"],
      "overrideName": true
    }
  },
  "terminal.integrated.sendKeybindingsToShell": true,
  "terminal.integrated.shellIntegration.enabled": false,
  "terminal.integrated.usePreviewBox": true,

  // Terraform
  "terraform.languageServer.terraform.path": "/Users/xavier.riu/bin/terraform",

  // Update
  "update.releaseTrack": "prerelease",

  // VS Code Custom CSS
  "vscode_custom_css.imports": [
    "file://${userHome}/dotfiles/vscode/styles.css"
  ],

  // VS IntelliCode
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  // Window
  "window.commandCenter": true,
  "window.restoreFullscreen": true,
  "window.titleBarStyle": "custom",
  "workbench.editor.associations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.showIcons": false,
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.editor.tabCloseButton": "off",
  "workbench.editor.tabSizing": "fixed",
  "workbench.iconTheme": "symbols",

  // YAML
  "yaml.schemas": {
    "file:///Users/xavier.riu/.cursor/extensions/atlassian.atlascode-4.0.7-universal/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
  },

  // AWS
  "aws.telemetry": false,

  // Atlas Code (Jira/Bitbucket)
  "atlascode.bitbucket.enabled": false,
  "atlascode.jira.enabled": true,
  "atlascode.jira.explorer.enabled": true,
  "atlascode.jira.explorer.monitorEnabled": false,
  "atlascode.jira.explorer.nestSubtasks": true,
  "atlascode.jira.hover.enabled": false,
  "atlascode.jira.jqlList": [
    {
      "enabled": true,
      "id": "49f2cfc2-f659-44ec-b3c0-7e94dd659479",
      "monitor": false,
      "name": "My launchmetrics Issues",
      "query": "assignee = currentUser() AND resolution = Unresolved ORDER BY lastViewed DESC",
      "siteId": "2b665b4d-6ecc-4eb5-b847-ad071bf66683"
    }
  ],
  "atlascode.jira.startWorkBranchTemplate.customTemplate": "xriu-{{{issueKey}}}-{{{summary}}}",
  "atlascode.jira.statusbar.enabled": false,
  "atlascode.jira.statusbar.showLogin": false,
  "atlascode.jira.statusbar.showProduct": false,
  "atlascode.jira.statusbar.showUser": false,
  "atlascode.jira.todoIssues.enabled": false,
  "atlascode.jira.todoIssues.triggers": [],

  // Console Ninja
  "console-ninja.featureSet": "Community",

  // Cursor
  "cursor.cmdk.useThemedDiffBackground": true,
  "cursor.composer.shouldAllowCustomModes": true,
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "cursor.composer.usageSummaryDisplay": "always",
  "cursor.general.gitGraphIndexing": "enabled",

  // Custom Local Formatters
  "customLocalFormatters.formatters": [
    {
      "command": "terraform fmt -",
      "languages": ["hcl"]
    }
  ],

  // Hadolint
  "hadolint.cliOptions": [],
  "workbench.experimental.share.enabled": true,
  "kilo-code.allowedCommands": ["git log", "git diff", "git show"],
  "kilo-code.deniedCommands": [],
  "cursor.enable_agent_window_setting": true,
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "workbench.panel.showLabels": false,
  "workbench.editor.enablePreview": false,
  "workbench.sideBar.location": "right",
  "workbench.colorTheme": "Mermaid Dark"
}
