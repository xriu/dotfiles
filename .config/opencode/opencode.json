{
	"$schema": "https://opencode.ai/config.json",
	"autoupdate": true,
	"permission": {
		"bash": {
			"git diff": "allow",
			"git status": "allow",
			"git log": "allow",
			"git show": "allow",
			"git branch": "allow"
		}
	},
	"model": "minimax/MiniMax-M2.1",
	"plugin": ["oh-my-opencode@beta"],
	"agent": {
		"plan": {
			"mode": "primary",
			"model": "synthetic/hf:zai-org/GLM-4.7",
			"prompt": "{file:./prompts/persona.txt}",
			"tools": {
				"write": false,
				"edit": false,
				"bash": true,
				"skill": true,
				"webfetch": true
			}
		},
		"build": {
			"mode": "primary",
			"model": "synthetic/hf:zai-org/GLM-4.7",
			"prompt": "{file:./prompts/persona.txt}",
			"tools": {
				"write": true,
				"edit": true,
				"bash": true,
				"skill": true,
				"webfetch": true
			}
		},
		"ask": {
			"model": "minimax/MiniMax-M2.1",
			"prompt": "{file:./prompts/persona.txt}",
			"tools": {
				"write": false,
				"edit": false,
				"bash": true,
				"skill": true,
				"webfetch": true
			}
		}
	},
	"mcp": {
		"gh-grep": {
			"enabled": false,
			"type": "remote",
			"url": "https://mcp.grep.app"
		},
		"context7": {
			"enabled": false,
			"type": "remote",
			"url": "https://mcp.context7.com/mcp",
			"headers": {
				"CONTEXT7_API_KEY": "$CONTEXT7_API_KEY"
			}
		},
		"sqlite": {
			"enabled": true,
			"type": "local",
			"command": [
				"uvx",
				"mcp-server-sqlite",
				"--db-path",
				"backend/api/data/xriu.db"
			]
		},
		"aws-knowledge-mcp": {
			"enabled": false,
			"type": "remote",
			"url": "https://knowledge-mcp.global.api.aws",
			"headers": {}
		},
		"vibe-kanban": {
			"enabled": false,
			"type": "local",
			"command": ["npx", "-y", "vibe-kanban@latest", "--mcp"]
		},
		"chrome-devtools": {
			"enabled": false,
			"type": "local",
			"command": ["npx", "-y", "chrome-devtools-mcp@latest"]
		},
		"playwright": {
			"enabled": false,
			"type": "local",
			"command": ["npx", "-y", "@playwright/mcp@latest"]
		}
	}
}
