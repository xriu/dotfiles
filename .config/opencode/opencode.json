{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "default_agent": "plan",
  "permission": {
    "bash": {
      "git push": "ask"
    }
  },
  "model": "synthetic/hf:zai-org/GLM-4.7",
  "plugin": ["oh-my-opencode"],
  "agent": {
    "plan": {
      "mode": "primary",
      "prompt": "{file:./prompts/persona.txt}",
      "temperature": 0.1,
      "tools": {
        "write": false,
        "edit": false,
        "bash": true,
        "skill": true,
        "webfetch": true
      }
    },
    "build": {
      "mode": "primary",
      "prompt": "{file:./prompts/persona.txt}",
      "temperature": 0.3,
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "skill": true,
        "webfetch": true
      }
    }
  },
  "mcp": {
    "gh-grep": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "sqlite": {
      "enabled": true,
      "type": "local",
      "command": [
        "uvx",
        "mcp-server-sqlite",
        "--db-path",
        "backend/api/data/xriu.db"
      ]
    },
    "aws-knowledge-mcp": {
      "enabled": false,
      "type": "remote",
      "url": "https://knowledge-mcp.global.api.aws",
      "headers": {}
    },
    "vibe-kanban": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "vibe-kanban@latest", "--mcp"]
    },
    "chrome-devtools": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"]
    },
    "playwright": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp@latest"]
    }
  }
}
