{
  "$schema": "https://opencode.ai/config.json",
  "model": "hf:zai-org/GLM-4.6",
  "autoupdate": true,
  "agent": {
    "plan": {
      "mode": "primary",
      "prompt": "{file:./rules/persona.txt}",
      "temperature": 0.1,
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    },
    "build": {
      "mode": "primary",
      "prompt": "{file:./rules/persona.txt}",
      "temperature": 0.1,
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "brainstorm": {
      "prompt": "{file:./rules/persona.txt}",
      "temperature": 0.7,
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    },
    "terraform": {
      "description": "Terraform agent",
      "prompt": "{file:./rules/terraform.txt}",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "deep-thinker": {
      "description": "High reasoning effort for complex problems",
      "model": "openai/gpt-5",
      "reasoningEffort": "high",
      "textVerbosity": "low"
    }
  },
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"],
      "enabled": false
    },
    "playwright": {
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp@latest"],
      "enabled": false
    },
    "filesystem": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/xavier.riu/Develop"
      ],
      "enabled": false
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": false
    },
    "mcp-deepwiki": {
      "type": "local",
      "command": ["npx", "-y", "mcp-deepwiki@latest"],
      "enabled": true
    }
  }
}
