{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "permission": {
    "bash": {
      "git push": "ask"
    }
  },
  "model": "synthetic/hf:zai-org/GLM-4.6",
  "plugin": ["opencode-skills"],
  "tools": {
    "write": false,
    "edit": false,
    "bash": false,
    "webfetch": true
  },
  "agent": {
    "plan": {
      "mode": "primary",
      "prompt": "{file:./rules/persona.txt}",
      "temperature": 0.1,
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": true
      }
    },
    "build": {
      "mode": "primary",
      "prompt": "{file:./rules/persona.txt}",
      "temperature": 0.3,
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "webfetch": true
      }
    },
    "document-writer": {
      "model": "opencode/big-pickle",
      "prompt": "{file:./rules/document-writer.txt}",
      "temperature": 0.1,
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "webfetch": true
      }
    },
    "brainstorm": {
      "prompt": "{file:./rules/persona.txt}",
      "temperature": 0.7,
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": true
      }
    },
    "deep-thinker": {
      "description": "High reasoning effort for complex problems",
      "model": "openai/gpt-5",
      "reasoningEffort": "high",
      "textVerbosity": "low"
    }
  },
  "mcp": {
    "gh_grep": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "aws-knowledge-mcp": {
      "enabled": false,
      "type": "remote",
      "url": "https://knowledge-mcp.global.api.aws",
      "headers": {}
    },
    "vibe_kanban": {
      "enabled": true,
      "type": "local",
      "command": ["npx", "-y", "vibe-kanban@latest", "--mcp"]
    },
    "chrome-devtools": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"]
    },
    "playwright": {
      "enabled": false,
      "type": "local",
      "command": ["npx", "-y", "@playwright/mcp@latest"]
    }
  }
}
